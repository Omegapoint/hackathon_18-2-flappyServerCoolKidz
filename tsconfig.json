{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "declaration": false,
    "importHelpers": true

  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "typings/**/*.ts"],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "sourceMap": true,
    "silent": true
  }
}
